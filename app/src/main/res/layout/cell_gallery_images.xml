<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_8"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/space_8">

    <LinearLayout
        android:layout_margin="@dimen/space_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.aashdit.ipms.views.PoppinsSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:textStyle="bold" />

            <com.aashdit.ipms.views.RobotoRegular
                android:id="@+id/tv_cell_progress_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.aashdit.ipms.views.PoppinsSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      Status : "
                android:textStyle="bold" />


            <com.aashdit.ipms.views.RobotoRegular
                android:id="@+id/tv_cell_progress_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.aashdit.ipms.views.PoppinsMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actual Progress : "
                android:textStyle="bold" />

            <com.aashdit.ipms.views.RobotoRegular
                android:id="@+id/text_gallery_prog_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.aashdit.ipms.views.PoppinsMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason : "
                android:id="@+id/tv_cell_reason_lbl"
                android:textStyle="bold" />

            <com.aashdit.ipms.views.RobotoRegular
                android:id="@+id/tv_cell_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.aashdit.ipms.views.PoppinsMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude : "
                android:id="@+id/tv_latitude_lbl"
                android:textStyle="bold" />

            <com.aashdit.ipms.views.RobotoRegular
                android:id="@+id/tv_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.aashdit.ipms.views.PoppinsMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude : "
                android:id="@+id/tv_longitude_lbl"
                android:textStyle="bold" />

            <com.aashdit.ipms.views.RobotoRegular
                android:id="@+id/tv_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.aashdit.ipms.views.PoppinsMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area : "
                android:id="@+id/tv_area_lbl"
                android:textStyle="bold" />

            <com.aashdit.ipms.views.RobotoRegular
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.aashdit.ipms.views.PoppinsMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos : "
                android:id="@+id/tv_photo_lbl"
                android:textStyle="bold" />

            <com.aashdit.ipms.views.RobotoRegular
                android:id="@+id/tv_photo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/iv_gallery_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_menu_gallery"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>