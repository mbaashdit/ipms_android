<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            app:tint="@color/colorBlack"
            android:layout_gravity="end"
            android:id="@+id/iv_approve_close"/>


        <com.aashdit.ipms.views.RobotoMedium
            android:layout_marginBottom="@dimen/space_16"
            android:layout_marginTop="@dimen/space_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remark (mandatory for rejection)"/>

        <EditText
            android:padding="@dimen/space_4"
            android:id="@+id/et_remark_on_action"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/remark_bg"
            android:gravity="top|left"/>

        <LinearLayout
            android:layout_marginTop="@dimen/space_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_4"
            android:paddingTop="@dimen/space_4"
            android:paddingStart="@dimen/space_4"
            android:paddingEnd="@dimen/space_4"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/btn_approve_bg"
                android:textColor="@color/colorWhite"
                android:id="@+id/btn_approve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_4"
                android:layout_weight="0.5"
                android:layout_marginBottom="@dimen/space_4"
                android:text="Approve" />

            <Button
                android:background="@drawable/btn_reject_bg"
                android:id="@+id/btn_reject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_4"
                android:layout_weight="0.5"
                android:layout_marginBottom="@dimen/space_4"
                android:text="Reject"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>